# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key\n-----END PRIVATE KEY-----\n"

# Email Configuration (Optional - can be configured via admin panel)
DEFAULT_EMAIL_PROVIDER=smtp
DEFAULT_SMTP_HOST=smtp.gmail.com
DEFAULT_SMTP_PORT=587
DEFAULT_SMTP_USER=noreply@rihabtech.com
DEFAULT_SMTP_PASS=your-app-password

# Razorpay Configuration (Optional - can be configured via admin panel)
DEFAULT_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
DEFAULT_RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Security
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
